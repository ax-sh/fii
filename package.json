{
  "name": "fii",
  "version": "0.20.0",
  "description": "fii CLI",
  "private": true,
  "types": "build/types/types.d.ts",
  "bin": {
    "fii": "bin/fii"
  },
  "scripts": {
    "release": "dotenv -v GIT_MERGE_AUTOEDIT=no release-it -- minor --no-git.push --no-git.requireUpstream --ci",
    "clean-build": "rimraf -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "copyfiles ./src/templates/* ./build/templates",
    "build": "bun clean-build && bun compile && bun copy-templates",
    "prepublishOnly": "yarn build",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "upp": "bunx npm-check-updates -i",
    "pretty": "pretty-quick",
    "db:gen": "bunx drizzle-kit generate --dialect sqlite --schema ./src/lib/db/schema.ts",
    "test": "bun test"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.11.11",
    "drizzle-orm": "^0.31.1",
    "execa": "^9.2.0",
    "gluegun": "latest"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bun": "^1.1.3",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.22.4",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^5.1.3",
    "prettier": "^3.3.1",
    "pretty-quick": "^4.0.0",
    "release-it": "^17.3.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
